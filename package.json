{
  "name": "whack-a-mole-game",
  "version": "1.0.0",
  "description": "A fun Whack-a-Mole game with multiple difficulty levels and animations",
  "main": "src/js/script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/efkobus/whack-a-mole-game.git"
  },
  "keywords": [
    "game",
    "whack-a-mole",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/efkobus/whack-a-mole-game/issues"
  },
  "homepage": "https://github.com/efkobus/whack-a-mole-game#readme",
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleDirectories": ["node_modules", "src"],
    "collectCoverageFrom": [
      "src/js/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
